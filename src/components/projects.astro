---
import ExhaustEnd from '../assets/projects/exhaustend.png';
import Migawka from '../assets/projects/migawka.png';
import Kalia from '../assets/projects/kalia.png';
import AdobeDocxConv from '../assets/projects/adobedocxconv.webp';

const projects = [
  {
    id: '1',
    description:
      'Aplikacja mobilna ExhaustEnd na Androida i iOS. Świadomość emisji dwutlenku węgla podczas podróży jest jej głównym celem. Mapuje trasy jako bezemisyjne lub emisyjne, wyświetlając ich długość i ilość emitowanego dwutlenku węgla. Dla swojej funkcjonalności wykorzystuje sensory ruchu w urządzeniu.',
    url: 'https://github.com/GKushi/exhaustend',
    image: ExhaustEnd.src,
  },
  {
    id: '2',
    description:
      'Aplikacja internetowa Migawka, nagrodzona 3. miejscem w ogólnopolskim konkursie Hack Heroes, rozwiązuje problemy wykluczenia obywatelskiego osób niemych i głuchych. Umożliwia komunikację poprzez język migowy, eliminując barierę związana z komunikacją werbalną.',
    url: 'https://github.com/GKushi/migawka-translator',
    image: Migawka.src,
  },
  {
    id: '3',
    description: 'Aplikacja mobilna Kalia na Androida i iOS. Ułatwia śledzenie zaległych długów i należności. Dodaj informacje o finansach, wybierz osobę, walutę, datę płatności i krótki opis. Kalia wyświetli statystyki i powiadomi przed terminem płatności.',
    url: 'https://github.com/GKushi/kalia-app',
    image: Kalia.src,
  },
  {
    id: '4',
    description: 'Proste narzędzie CLI do konwersji plików dla programistów korzystających z Adobe Franklin.',
    url: 'https://github.com/GKushi/adobe-docx-conv',
    image: AdobeDocxConv.src,
  },
];
---

<div class="-scroll-m-5 px-6 md:-scroll-m-10" id="portfolio">
  <div class="mx-auto w-full max-w-7xl space-y-5 py-10 md:space-y-20 md:py-16">
    <h2 class="text-lg font-black text-secondary sm:text-3xl md:text-5xl">Zobacz co robię po pracy.</h2>
    <div class="grid gap-3 sm:grid-cols-2 md:gap-6 lg:grid-cols-3 lg:gap-10">
      {
        projects.map((project, i) => (
          <div
            class={`relative flex h-[300px] rounded-[40px] bg-cover bg-[top_center] sm:h-[400px] md:rounded-[60px] lg:h-[500px] ${i === 1 ? 'order-1 sm:col-span-2 lg:order-2' : ''} ${i === 0 ? 'order-2 lg:order-1' : ''}`}
            style={{
              ...{
                backgroundImage: `url(${project.image})`,
              },
              ...(i > 1 ? { order: i + 1 } : {}),
            }}
          >
            <a
              href={project.url}
              target="_blank"
              class="xs:px-10 xs:pb-10 xs:pt-5 group mt-auto flex w-full items-end justify-center rounded-b-[35px] bg-primary bg-opacity-80 px-4 pb-2 pt-2 transition-all duration-300 hover:bg-opacity-80 md:h-full md:rounded-[55px] md:bg-opacity-0"
            >
              <p class="xs:text-base block text-center text-xs text-background opacity-100 transition-all duration-300 group-hover:opacity-100 md:opacity-0 lg:text-lg">{project.description}</p>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</div>
